<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom_toolbar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/game_fragment_top_layout_height_with_tab_layout"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="@dimen/fragment_game_header_card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/game_fragment_top_layout_height"
                android:orientation="vertical">

                <com.example.mvmax.mindgames.toolbar.Toolbar
                    android:id="@+id/toolbar_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    custom_toolbar:action="back"
                    custom_toolbar:background_color="@color/transparent"/>

                <TextView
                    android:id="@+id/game_fragment_header_price_info"
                    style="@style/GameFragmentDescriptionStyleBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/fragment_game_text_poster_left_margin"
                    android:layout_marginStart="@dimen/fragment_game_text_poster_left_margin"
                    android:background="@drawable/shape_rounded_corners_presenter_4dp"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:paddingBottom="4dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    tools:text="@string/available_for_premium"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/game_fragment_card_view_poster"
                            android:layout_width="@dimen/game_fragment_poster_width"
                            android:layout_height="@dimen/game_fragment_poster_height"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/game_fragment_poster_margin_left"
                            android:layout_marginStart="@dimen/game_fragment_poster_margin_left"
                            app:cardElevation="@dimen/game_fragment_poster_elevation">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/game_fragment_poster"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                tools:srcCompat="@drawable/template_poster"/>

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="@dimen/game_fragment_header_text_max_width"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/game_fragment_header_text_margin_right"
                            android:layout_marginLeft="@dimen/game_fragment_header_text_margin_left"
                            android:layout_marginRight="@dimen/game_fragment_header_text_margin_right"
                            android:layout_marginStart="@dimen/game_fragment_header_text_margin_left"
                            android:layout_toEndOf="@id/game_fragment_card_view_poster"
                            android:layout_toRightOf="@id/game_fragment_card_view_poster"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/game_fragment_header_description"
                                style="@style/GameFragmentDescriptionStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/fragment_game_text_poster_left_margin"
                                android:layout_marginStart="@dimen/fragment_game_text_poster_left_margin"
                                tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."/>

                            <android.support.v7.widget.AppCompatButton
                                android:id="@+id/game_fragment_play_button"
                                style="@style/PrimaryButtonStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_play"
                                android:drawablePadding="@dimen/play_button_icon_padding"
                                android:drawableStart="@drawable/ic_play"
                                android:ellipsize="end"
                                android:text="@string/start_game"/>

                            <android.support.v7.widget.AppCompatButton
                                android:id="@+id/game_fragment_buy_button"
                                style="@style/PrimaryButtonStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_dollar"
                                android:drawablePadding="@dimen/play_button_icon_padding"
                                android:drawableStart="@drawable/ic_dollar"
                                android:ellipsize="end"
                                android:text="@string/buy_premium"/>

                        </LinearLayout>

                    </RelativeLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</merge>