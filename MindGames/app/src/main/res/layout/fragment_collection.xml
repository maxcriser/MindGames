<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_base_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom_toolbar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.mvmax.mindgames.toolbar.Toolbar
        android:id="@+id/toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom_toolbar:action="menu"
        custom_toolbar:background_color="@color/toolbar_color"
        custom_toolbar:title="@string/app_name"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/description"
            android:layout_alignParentTop="true"
            android:layout_gravity="bottom"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="@dimen/card_padding_top_bottom"
            android:paddingEnd="@dimen/card_padding_left_right"
            android:paddingLeft="@dimen/card_padding_left_right"
            android:paddingRight="@dimen/card_padding_left_right"
            android:paddingStart="@dimen/card_padding_left_right"
            android:paddingTop="@dimen/card_padding_top_bottom"/>

        <LinearLayout
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/game_title"
                style="@style/TitleTextWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:maxLines="1"
                tools:text="Snake"/>

            <TextView
                android:id="@+id/game_description"
                style="@style/StandartTextWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:maxLines="1"
                tools:text="Built-in Google Game"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/white"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/game_play_button"
                style="@style/PrimaryButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:drawableLeft="@drawable/ic_play"
                android:drawablePadding="@dimen/play_button_icon_padding"
                android:drawableStart="@drawable/ic_play"
                android:ellipsize="end"
                android:text="@string/play_now"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/game_open_button"
                    style="@style/PrimaryButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:drawableLeft="@drawable/ic_play"
                    android:drawablePadding="@dimen/play_button_icon_padding"
                    android:drawableStart="@drawable/ic_play"
                    android:ellipsize="end"
                    android:text="@string/open"
                    android:visibility="gone"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/game_buy_button"
                    style="@style/PrimaryButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@+id/game_open_button"
                    android:layout_toRightOf="@+id/game_open_button"
                    android:drawableLeft="@drawable/ic_dollar"
                    android:drawablePadding="@dimen/play_button_icon_padding"
                    android:drawableStart="@drawable/ic_dollar"
                    android:ellipsize="end"
                    android:text="@string/buy_premium"
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>