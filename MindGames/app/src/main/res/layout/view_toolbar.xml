<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    tools:background="@color/toolbar_color">

    <FrameLayout
        android:id="@+id/second_background_toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/toolbar_view_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_gravity="bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/toolbar_left_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/toolbar_view_menu"
                    android:layout_width="@dimen/toolbar_height"
                    android:layout_height="@dimen/toolbar_height"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/toolbar_icon_padding"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_menu"/>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/toolbar_view_back"
                    android:layout_width="@dimen/toolbar_height"
                    android:layout_height="@dimen/toolbar_height"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/toolbar_icon_padding"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_back"
                    tools:visibility="visible"/>

            </FrameLayout>

            <TextView
                android:id="@+id/toolbar_view_title"
                style="@style/ToolbarTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/toolbar_left_frame"
                android:layout_toLeftOf="@+id/toolbar_view_share"
                android:layout_toRightOf="@+id/toolbar_left_frame"
                android:layout_toStartOf="@+id/toolbar_view_share"
                android:gravity="center"
                android:textColor="@color/toolbar_elements_color"
                tools:text="Mind Games Application"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/toolbar_view_share"
                android:layout_width="@dimen/toolbar_height"
                android:layout_height="@dimen/toolbar_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/toolbar_icon_padding"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_share"/>

        </RelativeLayout>

    </FrameLayout>

</FrameLayout>