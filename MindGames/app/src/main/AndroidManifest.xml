<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.mvmax.mindgames"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name=".Core"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/SplashAppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.AuthActivity"
            android:theme="@style/AuthAppTheme"/>

        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".gamecard.GameCardActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".games.guessthestory.GuessTheStoryGameActivity"
            android:exported="true"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".games.guesstheword.GuessTheWordGameActivity"
            android:exported="true"
            android:theme="@style/AppTheme"/>

        <!--SAMPLE ACTIVITIES-->
        <activity
            android:name=".sample.SwipeStackSampleActivity"
            android:exported="true"
            android:theme="@style/AppTheme"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>